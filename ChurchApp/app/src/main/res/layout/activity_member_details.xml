<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChurchIntents.MemberDetails">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="45dp"
        android:text="Member Details"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_memberDetails_fname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_memberDetails_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_memberDetails_lname"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/tv_memberDetails_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_memberDetails_back"
        app:layout_constraintStart_toStartOf="@+id/tv_memberDetails_denomination"
        app:layout_constraintTop_toBottomOf="@+id/tv_memberDetails_denomination" />

    <TextView
        android:id="@+id/tv_memberDetails_denomination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_memberDetails_city"
        app:layout_constraintStart_toStartOf="@+id/tv_memberDetails_lname"
        app:layout_constraintTop_toBottomOf="@+id/tv_memberDetails_lname" />

    <TextView
        android:id="@+id/tv_memberDetails_lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_memberDetails_denomination"
        app:layout_constraintStart_toStartOf="@+id/tv_memberDetails_fname"
        app:layout_constraintTop_toBottomOf="@+id/tv_memberDetails_fname" />

    <Button
        android:id="@+id/btn_memberDetails_back"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginBottom="215dp"
        android:text="Back"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_memberDetails_city" />

</androidx.constraintlayout.widget.ConstraintLayout>