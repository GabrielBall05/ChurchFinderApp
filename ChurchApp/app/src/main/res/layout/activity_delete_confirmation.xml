<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Confirmations.DeleteConfirmation">

    <TextView
        android:id="@+id/tv_deleteConfirmation_areYouSure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="74dp"
        android:text="Are you sure you want to delete?"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_deleteConfirmation_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_deleteConfirmation_yes"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="50dp"
        android:text="Yes"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_deleteConfirmation_no"
        app:layout_constraintEnd_toStartOf="@+id/btn_deleteConfirmation_no"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_deleteConfirmation_no"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="363dp"
        android:text="No"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_deleteConfirmation_yes"
        app:layout_constraintTop_toBottomOf="@+id/tv_deleteConfirmation_areYouSure" />
</androidx.constraintlayout.widget.ConstraintLayout>